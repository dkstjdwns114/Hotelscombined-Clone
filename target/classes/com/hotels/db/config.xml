<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="org.mariadb.jdbc.Driver"/>
        <property name="url" value="jdbc:mariadb://127.0.0.1:3306/hotels"/>
        <property name="username" value="root"/>
        <property name="password" value="1234"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/hotels/db/member.xml"/>
    <mapper resource="com/hotels/db/user.xml"/>
    <mapper resource="com/hotels/db/admin.xml"/>
    <mapper resource="com/hotels/db/resAdmin.xml"/>
    <mapper resource="com/hotels/db/reservation.xml"/>
  </mappers>
</configuration>